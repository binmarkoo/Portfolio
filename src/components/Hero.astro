<section class="min-h-screen flex items-center justify-center pt-20 pb-10">
    <div class="container-custom text-center">
        <div class="mb-8 space-y-4">
            <h1 class="text-5xl md:text-7xl font-bold leading-tight">
                <span class="gradient-text">Transformiere Ideen</span>
                <br />
                in Realität
            </h1>
            <p class="text-xl md:text-2xl text-gray-400 max-w-3xl mx-auto">
                Leidenschaftlich daran interessiert, intuitive und ansprechende
                Benutzererlebnisse zu schaffen. Spezialisiert auf die Umsetzung
                von Ideen in wunderschön gestaltete Produkte.
            </p>
        </div>

        <div class="flex flex-wrap justify-center gap-8 mt-12">
            <div class="card-glass p-6 min-w-[200px]">
                <div class="text-4xl font-bold gradient-text">+3</div>
                <div class="text-gray-400 mt-2">Jahre Erfahrung</div>
            </div>

            <div class="card-glass p-6 min-w-[200px]">
                <div class="text-4xl font-bold gradient-text">+15</div>
                <div class="text-gray-400 mt-2">Projekte abgeschlossen</div>
            </div>

            <div class="card-glass p-6 min-w-[200px]">
                <div class="text-4xl font-bold gradient-text">+10</div>
                <div class="text-gray-400 mt-2">Zertifikate</div>
            </div>
        </div>

        <div class="mt-12">
            <a
                href="/projekte"
                class="inline-block bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-4 rounded-full font-semibold hover:scale-105 transition-transform duration-300"
            >
                Projekte ansehen
            </a>
        </div>
    </div>
</section>
