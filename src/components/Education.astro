---
const education = [
  {
    logo: '/images/education/volksschule.png',
    institution: 'Volksschule Neue Heimat',
    period: '(2012 - 2016)',
    location: 'Bischofshofen, Austria'
  },
  {
    logo: '/images/education/gym.jpg',
    institution: 'BG/BRG/BORG St. Johann im Pongau',
    period: '(2016 - 2021)',
    location: 'St. Johann/Pongau, Austria'
  },
  {
    logo: '/images/education/htl.jpg',
    institution: 'HTL Saalfelden/St. Johann',
    period: '(2021 - 2026)',
    location: 'St. Johann/Pongau, Austria'
  }
];
---

<section class="min-h-screen flex items-center py-32 bg-gradient-to-b from-gray-950 to-gray-900">
  <div class="container-custom max-w-5xl">
    <div class="flex items-center gap-4 mb-20">
      <h2 class="text-4xl md:text-4xl font-bold text-white">AUSBILDUNG</h2>
    </div>
    
    <div class="relative">
      <!-- Timeline Line -->
      <div class="absolute left-5 top-0 bottom-0 w-0.5 bg-gray-700"></div>
      
      <!-- Education Items -->
      <div class="space-y-16">
        {education.map((item, index) => (
          <div class="relative pl-20">
            <!-- Timeline Dot -->
            <div class="absolute left-0 top-4 w-10 h-10 bg-gray-800 border-4 border-gray-600 rounded-full"></div>
            
            <!-- Content Card -->
            <div class="card-glass p-10 hover:bg-white/10 transition-colors duration-300">
              <div class="flex items-start gap-8">
                <!-- Logo -->
                <div class="flex-shrink-0 w-24 h-24 bg-gray-800 rounded-full p-3 flex items-center justify-center">
                  <img 
                    src={item.logo} 
                    alt={item.institution}
                    class="w-full h-full object-contain"
                  />
                </div>
                
                <!-- Info -->
                <div class="flex-1">
                  <h3 class="text-2xl md:text-3xl font-bold text-white mb-3">
                    {item.institution} <span class="text-gray-400 font-normal">{item.period}</span>
                  </h3>
                  <div class="flex items-center gap-2 text-gray-400 text-lg">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg>
                    {item.location}
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>