---
const education = [
  {
    logo: '/images/education/volksschule.png',
    institution: 'Volksschule Neue Heimat',
    period: '(2012 - 2016)',
    location: 'Bischofshofen, Austria'
  },
  {
    logo: '/images/education/gym.jpg',
    institution: 'BG/BRG/BORG St. Johann im Pongau',
    period: '(2016 - 2021)',
    location: 'St. Johann/Pongau, Austria'
  },
  {
    logo: '/images/education/htl.jpg',
    institution: 'HTL Saalfelden/St. Johann',
    period: '(2021 - 2026)',
    location: 'St. Johann/Pongau, Austria'
  },
  {
    logo: '/images/education/kaindl.png',
    institution: 'Kaindl Salzburg - Praktikum',
    period: '(Sommer 2023)',
    location: 'Salzburg, Austria'
  },
  {
    logo: '/images/education/bhofn.jpg',
    institution: 'Gemeinde Bischofshofen - IT Praktikum',
    period: '(Sommer 2024)',
    location: 'Bischofshofen, Austria'
  }
];
---

<section class="min-h-screen flex items-center py-16 md:py-24 lg:py-32 bg-gradient-to-b from-gray-950 to-gray-900">
  <div class="container-custom w-full max-w-5xl px-4 md:px-6 lg:px-8">
    <div class="flex items-center gap-3 md:gap-4 mb-10 md:mb-16 lg:mb-20">
      <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold text-white">AUSBILDUNG</h2>
    </div>
    
    <div class="relative">
      <!-- Timeline Line -->
      <div class="absolute left-2 md:left-4 lg:left-5 top-0 bottom-0 w-0.5 bg-gray-700"></div>
      
      <!-- Education Items -->
      <div class="space-y-6 md:space-y-12 lg:space-y-16">
        {education.map((item, index) => (
          <div class="relative pl-8 md:pl-16 lg:pl-20">
            <!-- Timeline Dot -->
            <div class="absolute left-0 top-1 md:top-3 lg:top-4 w-4 h-4 md:w-8 md:h-8 lg:w-10 lg:h-10 bg-gray-800 border-2 md:border-3 lg:border-4 border-gray-600 rounded-full"></div>
            
            <!-- Content Card -->
            <div class="card-glass p-4 md:p-6 lg:p-10 hover:bg-white/10 transition-colors duration-300">
              <div class="flex flex-col sm:flex-row items-start gap-3 md:gap-6 lg:gap-8">
                <!-- Logo -->
                <div class="flex-shrink-0 w-12 h-12 md:w-20 md:h-20 lg:w-24 lg:h-24 bg-gray-800 rounded-full p-2 md:p-2.5 lg:p-3 flex items-center justify-center">
                  <img 
                    src={item.logo} 
                    alt={item.institution}
                    class="w-full h-full object-contain"
                  />
                </div>
                
                <!-- Info -->
                <div class="flex-1 w-full">
                  <h3 class="text-base md:text-xl lg:text-2xl xl:text-3xl font-bold text-white mb-1 md:mb-2 lg:mb-3 leading-tight">
                    <span class="block sm:inline">{item.institution}</span>
                    {' '}
                    <span class="text-gray-400 font-normal text-sm md:text-lg lg:text-xl xl:text-2xl block sm:inline mt-1 sm:mt-0">{item.period}</span>
                  </h3>
                  <div class="flex items-center gap-1.5 md:gap-2 text-gray-400 text-xs md:text-base lg:text-lg">
                    <svg class="w-3 h-3 md:w-4 md:h-4 lg:w-5 lg:h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg>
                    <span class="break-words">{item.location}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>