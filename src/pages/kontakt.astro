---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const contactMethods = [
    {
        name: "Gmail",
        image: "/images/contact/gmail.png",
        link: "https://mail.google.com/mail/?view=cm&fs=1&to=marko.mikanovic2309@gmail.com"
    },
    {
        name: "LinkedIn",
        image: "/images/contact/linkedin.png",
        link: "https://www.linkedin.com/in/marko-mikanovic-4509aa340/"
    },
    {
        name: "GitHub",
        image: "/images/contact/github.png",
        link: "https://github.com/binmarkoo"
    }
];
---

<Layout title="Kontakt - Mein Portfolio">
    <Header />
    <main class="pt-32 pb-20">
        <div class="container-custom">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-center mb-6">
                <span class="gradient-text">Kontakt</span>
            </h1>
            <p
                class="text-lg md:text-xl text-gray-400 text-center mb-12 md:mb-16 max-w-3xl mx-auto"
            >
                Feedback? Fragen?
            </p>

            <div class="max-w-4xl mx-auto">
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                    {contactMethods.map((method) => (
                        <a
                            href={method.link}
                            target={method.name === "Email" ? undefined : "_blank"}
                            rel={method.name === "Email" ? undefined : "noopener noreferrer"}
                            class="card-glass p-6 md:p-8 text-center hover:scale-105 transition-transform duration-300 group"
                        >
                            <div class="w-16 h-16 md:w-20 md:h-20 mx-auto mb-4 bg-gray-800 rounded-full p-3 md:p-4 flex items-center justify-center group-hover:scale-110 transition-transform">
                                <img 
                                    src={method.image} 
                                    alt={method.name}
                                    class="w-full h-full object-contain"
                                />
                            </div>
                            <h3 class="text-white font-semibold text-base md:text-lg group-hover:text-blue-400 transition-colors">
                                {method.name}
                            </h3>
                        </a>
                    ))}
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>