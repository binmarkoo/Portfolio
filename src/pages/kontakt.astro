---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Kontakt - Mein Portfolio">
    <Header />
    <main class="pt-32 pb-20">
        <div class="container-custom">
            <h1 class="text-5xl md:text-6xl font-bold text-center mb-6">
                Lass uns <span class="gradient-text">zusammenarbeiten</span>
            </h1>
            <p
                class="text-xl text-gray-400 text-center mb-16 max-w-3xl mx-auto"
            >
                Haben Sie ein Projekt im Kopf? Ich freue mich darauf, von Ihnen
                zu h√∂ren!
            </p>

            <div class="max-w-2xl mx-auto">
                <form class="card-glass p-8 space-y-6">
                    <div>
                        <label for="name" class="block text-white mb-2"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white focus:outline-none focus:border-blue-500 transition-colors"
                            placeholder="Ihr Name"
                        />
                    </div>

                    <div>
                        <label for="email" class="block text-white mb-2"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white focus:outline-none focus:border-blue-500 transition-colors"
                            placeholder="ihre@email.com"
                        />
                    </div>

                    <div>
                        <label for="message" class="block text-white mb-2"
                            >Nachricht</label
                        >
                        <textarea
                            id="message"
                            rows="5"
                            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white focus:outline-none focus:border-blue-500 transition-colors resize-none"
                            placeholder="Ihre Nachricht..."></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-4 rounded-lg font-semibold hover:scale-105 transition-transform duration-300"
                    >
                        Nachricht senden
                    </button>
                </form>

                <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
                    <a
                        href="mailto:marko.mikanovic2309@gmail.com"
                        class="card-glass p-6 text-center hover:scale-105 transition-transform duration-300 block group"
                        style="text-decoration: none;"
                        role="button"
                    >
                        <div
                            class="text-3xl mb-3 group-hover:scale-110 transition-transform"
                        >
                            üìß
                        </div>
                        <h3
                            class="text-white font-semibold text-lg group-hover:text-blue-400 transition-colors"
                        >
                            Email
                        </h3>
                    </a>

                    <a
                        href="https://www.linkedin.com/in/marko-mikanovic-4509aa340/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="card-glass p-6 text-center hover:scale-105 transition-transform duration-300 cursor-pointer group"
                    >
                        <div
                            class="text-3xl mb-3 group-hover:scale-110 transition-transform"
                        >
                            üíº
                        </div>
                        <h3
                            class="text-white font-semibold text-lg group-hover:text-blue-400 transition-colors"
                        >
                            LinkedIn
                        </h3>
                    </a>

                    <a
                        href="https://github.com/binmarkoo"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="card-glass p-6 text-center hover:scale-105 transition-transform duration-300 cursor-pointer group"
                    >
                        <div
                            class="text-3xl mb-3 group-hover:scale-110 transition-transform"
                        >
                            üêô
                        </div>
                        <h3
                            class="text-white font-semibold text-lg group-hover:text-blue-400 transition-colors"
                        >
                            GitHub
                        </h3>
                    </a>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
