---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Footer from "../components/Footer.astro";

const projects = [
    {
        title: "Loreflix",
        description:
            "Website zum Durchstöbern und Entdecken von Filmen und Serien",
        image: "/images/Loreflix.png",
        tags: ["React", "Node.js"],
        githubUrl: "https://github.com/binmarkoo/Loreflix",
        liveUrl: "https://loreflix.netlify.app/",
    },
    {
        title: "Animelist",
        description:
            "Verwalten und Nachverfolgen von Anime-Serien mit einer benutzerfreundlichen Oberfläche",
        image: "/images/AnimeList.jpg",
        tags: ["C#", "Blazor", "WPF"],
        githubUrl: "https://github.com/binmarkoo/AnimeList",
    },
    {
        title: "Adventskalender",
        description:
            "Interaktiver digitaler Adventskalender mit täglichen Überraschungen",
        image: "/images/Adventskalender.png",
        tags: ["Java", "JavaFX"],
        githubUrl: "https://github.com/binmarkoo/Adventskalender",
    },
    // Weitere Projekte hinzufügen
];
---

<Layout title="Projekte - Mein Portfolio">
    <Header />
    <main class="pt-32 pb-20">
        <div class="container-custom">
            <h1 class="text-5xl md:text-6xl font-bold text-center mb-6">
                Meine <span class="gradient-text">Projekte</span>
            </h1>
            <p
                class="text-xl text-gray-400 text-center mb-16 max-w-3xl mx-auto"
            >
                Hier finden Sie eine Übersicht meiner abgeschlossenen und
                laufenden Projekte. Jedes Projekt zeigt meine Fähigkeiten und
                meine Entwicklung als Developer.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {projects.map((project) => <ProjectCard {...project} />)}
            </div>
        </div>
    </main>
    <Footer />
</Layout>
